<%- include("header.ejs",{title:'首页',isshow:true})%>
<% for(var i = 0;i<list.length;i++){%>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <a role="button" href="/details/<%=list[i].id%>" >
                                <%= list[i].title%>
                            </a>
                            <a href="/article/delete/<%=list[i].id%>" role="button" class="btn btn-danger">delete</a>
                            <a href="/article/update/<%=list[i].id%>" role="button" class="btn btn-warning">edit</a>

                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse " role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <p><%= list[i].content%></p>
                        </div>
                    </div>
                </div>
            </div>
